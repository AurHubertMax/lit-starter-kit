{
  "name": "lit-starter-kit",
  "version": "0.0.0",
  "description": "A starter kit for creating a Lit-based web component library.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "analyze": "cem analyze",
    "analyze:dev": "cem analyze --watch",
    "dev": "concurrently -k -r \"npm run analyze:dev\" \"npm run storybook\"",
    "test": "web-test-runner --group default",
    "build": "npm run analyze && tsc",
    "deploy": "npm run build && npm publish",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "npx eslint",
    "format:eslint": "npx eslint --fix",
    "lint:prettier": "npx prettier . --check",
    "format:prettier": "npx prettier . --write",
    "prepare": "husky && npx playwright install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.46.1",
    "@storybook/addon-a11y": "^8.4.6",
    "@storybook/addon-actions": "^8.1.11",
    "@storybook/addon-essentials": "^8.1.11",
    "@storybook/addon-links": "^8.1.11",
    "@storybook/blocks": "^8.1.11",
    "@storybook/test": "^8.1.11",
    "@storybook/web-components": "^8.1.11",
    "@storybook/web-components-vite": "^8.1.11",
    "@types/mocha": "^10.0.2",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "cem-plugin-expanded-types": "^1.3.3",
    "concurrently": "^8.2.2",
    "custom-element-jet-brains-integration": "^1.6.2",
    "custom-element-react-wrappers": "^1.6.8",
    "custom-element-vs-code-integration": "^1.4.1",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-storybook": "^0.8.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "storybook": "^8.1.11",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.16.0",
    "vite": "^5.3.4",
    "wc-storybook-helpers": "^2.0.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.format:prettier": "prettier --write"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "files": [
    "cdn",
    "dist",
    "index.d.ts",
    "index.js",
    "package.json",
    "custom-elements.json"
  ]
}
